<div id="new-comment-form">
  <% if signed_in? %>
    <h4>add a review:</h4>
    
    <form>
      <%= form_for([@product, @product.comments.build]) do |f| %>
        <fieldset>
          <%= f.label :body, "comments" %><br>
          <%= f.text_area :body, class:"form-control", placeholder:"your comment here", rows: 3 %>
        </fieldset>
      
        <div class="rating"></div>
        <div class="actions">
          <%= f.submit "Submit", class:"btn btn-success" %>
        </div>
      <% end %>
    </form>
  <% end %>
</div>
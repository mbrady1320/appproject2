<div id="products-show">
  <p id="notice"><%= notice %></p>
    <h1 class="product-show-header">product details</h1>

  <div id="details">
    <p>
      <strong>Image</strong>
      <%= image_tag(@product.image_url, class: "img-responsive product-image-show") %>
    </p>
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Text:</strong>
      <%= @product.text %>
    </p>
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p id="comments">
      <strong>Comments:</strong>
    </p>

    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div><!--/details-->
  
</div><!--/products-show-->